{{/*
  JVM Snippet 
  - height = 304
  - width = 1368

  Required parameters:
    - processTag
    - snippet_JVM_left
    - snippet_JVM_top
*/}}
{{- $left := .snippet_JVM_left }}
{{- $top := .snippet_JVM_top }}
{{- $tile_width := 1368 }} 
{{- $tile_height := 76 }} 
    {
      "name": "Markdown",
      "tileType": "MARKDOWN",
      "configured": true,
      "bounds": {
        "top": {{ $top }},
        "left": {{ $left }},
        "width": {{ $tile_width }},
        "height": {{ $tile_height }}
      },
      "tileFilter": {},
      "isAutoRefreshDisabled": false,
      "markdown": "## JVM Metrics\nThis data comes from a snippet JVM for processes tagged with tag {{ .processTag }} \n\n"
    },
{{/* Next row, update only top position, just reset left */}}
{{- $top = len (printf "%s%s" (printf "%*s" $top "") (printf "%*s" $tile_height ""))}}
{{- $left := .snippet_JVM_left }}
{{- $tile_width := 684 }}
{{- $tile_height := 228 }} 

    {
      "name": "Garbage collection",
      "tileType": "DATA_EXPLORER",
      "configured": true,
      "bounds": {
        "top": {{ $top }},
        "left": {{ $left }},
        "width": {{ $tile_width }},
        "height": {{ $tile_height }}
      },
      "tileFilter": {},
      "isAutoRefreshDisabled": false,
      "customName": "Data explorer results",
      "queries": [
        {
          "id": "A",
          "metric": "builtin:tech.jvm.memory.gc.suspensionTime",
          "spaceAggregation": "AUTO",
          "timeAggregation": "DEFAULT",
          "splitBy": [],
          "sortBy": "DESC",
          "sortByDimension": "",
          "filterBy": {
            "filterOperator": "AND",
            "nestedFilters": [
              {
                "filter": "dt.entity.process_group_instance",
                "filterType": "TAG",
                "filterOperator": "OR",
                "nestedFilters": [],
                "criteria": [
                  {
                    "value": "{{ .processTag }}",
                    "evaluator": "IN"
                  }
                ]
              }
            ],
            "criteria": []
          },
          "limit": 20,
          "rate": "NONE",
          "enabled": true
        },
        {
          "id": "B",
          "metric": "builtin:tech.jvm.memory.pool.collectionCount",
          "spaceAggregation": "AUTO",
          "timeAggregation": "DEFAULT",
          "splitBy": [],
          "sortBy": "DESC",
          "sortByDimension": "",
          "filterBy": {
            "filterOperator": "AND",
            "nestedFilters": [
              {
                "filter": "dt.entity.process_group_instance",
                "filterType": "TAG",
                "filterOperator": "OR",
                "nestedFilters": [],
                "criteria": [
                  {
                    "value": "{{ .processTag }}",
                    "evaluator": "IN"
                  }
                ]
              }
            ],
            "criteria": []
          },
          "limit": 20,
          "rate": "NONE",
          "enabled": true
        }
      ],
      "visualConfig": {
        "type": "GRAPH_CHART",
        "global": {},
        "rules": [
          {
            "matcher": "A:",
            "unitTransform": "auto",
            "valueFormat": "auto",
            "properties": {
              "color": "DEFAULT",
              "seriesType": "LINE"
            },
            "seriesOverrides": []
          },
          {
            "matcher": "B:",
            "unitTransform": "auto",
            "valueFormat": "auto",
            "properties": {
              "color": "DEFAULT",
              "seriesType": "COLUMN"
            },
            "seriesOverrides": []
          }
        ],
        "axes": {
          "xAxis": {
            "displayName": "",
            "visible": true
          },
          "yAxes": [
            {
              "displayName": "",
              "visible": true,
              "min": "AUTO",
              "max": "AUTO",
              "position": "LEFT",
              "queryIds": [
                "A"
              ],
              "defaultAxis": true
            },
            {
              "displayName": "",
              "visible": true,
              "min": "AUTO",
              "max": "AUTO",
              "position": "RIGHT",
              "queryIds": [
                "B"
              ],
              "defaultAxis": true
            }
          ]
        },
        "heatmapSettings": {
          "yAxis": "VALUE"
        },
        "thresholds": [
          {
            "axisTarget": "LEFT",
            "rules": [
              {
                "color": "#7dc540"
              },
              {
                "color": "#f5d30f"
              },
              {
                "color": "#dc172a"
              }
            ],
            "visible": true
          }
        ],
        "tableSettings": {
          "hiddenColumns": []
        },
        "graphChartSettings": {
          "connectNulls": false
        },
        "honeycombSettings": {
          "showHive": true,
          "showLegend": true,
          "showLabels": false
        }
      },
      "queriesSettings": {
        "resolution": ""
      },
      "metricExpressions": [
        "resolution=null&(builtin:tech.jvm.memory.gc.suspensionTime:filter(and(or(in(\"dt.entity.process_group_instance\",entitySelector(\"type(process_group_instance),tag(~\"{{ .processTag }}~\")\"))))):splitBy():sort(value(auto,descending)):limit(20)):limit(100):names,(builtin:tech.jvm.memory.pool.collectionCount:filter(and(or(in(\"dt.entity.process_group_instance\",entitySelector(\"type(process_group_instance),tag(~\"{{ .processTag }}~\")\"))))):splitBy():sort(value(auto,descending)):limit(20)):limit(100):names"
      ]
    },

