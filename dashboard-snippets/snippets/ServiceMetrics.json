{{/*
  ServiceMetric Snippet 
  - height = 304
  - width = 1368
  
  Required parameters:
    - serviceTag
    - snippet_ServiceMetrics_left
    - snippet_ServiceMetrics_top
*/}}

{{- $left := .snippet_ServiceMetrics_left }}
{{- $top := .snippet_ServiceMetrics_top }}
{{- $tile_width := 1368 }}
{{- $tile_height := 76 }} 
    {
      "name": "Markdown",
      "tileType": "MARKDOWN",
      "configured": true,
      "bounds": {
        "top": {{ $top }},
        "left": {{ $left }},
        "width": {{ $tile_width }},
        "height": {{ $tile_height }}
      },
      "tileFilter": {},
      "isAutoRefreshDisabled": false,
      "markdown": "## Service Metrics\nThis data comes from a snippet Service for processes tagged with tag {{ .serviceTag }} \n\n"
    },
{{/* Next row, update only top position, just reset left */}}
{{- $top = len (printf "%s%s" (printf "%*s" $top "") (printf "%*s" $tile_height ""))}}
{{- $left := .snippet_ServiceMetrics_left }}
{{- $tile_width := 684 }}
{{- $tile_height := 228 }} 

    {
      "name": "Throughput and response",
      "tileType": "DATA_EXPLORER",
      "configured": true,
      "bounds": {
        "top": {{ $top }},
        "left": {{ $left }},
        "width": {{ $tile_width }},
        "height": {{ $tile_height }}
      },
      "tileFilter": {},
      "isAutoRefreshDisabled": false,
      "customName": "Data explorer results",
      "queries": [
        {
          "id": "A",
          "metric": "builtin:service.requestCount.server",
          "spaceAggregation": "AUTO",
          "timeAggregation": "DEFAULT",
          "splitBy": [],
          "sortBy": "DESC",
          "sortByDimension": "",
          "filterBy": {
            "filterOperator": "AND",
            "nestedFilters": [
              {
                "filter": "dt.entity.service",
                "filterType": "TAG",
                "filterOperator": "OR",
                "nestedFilters": [],
                "criteria": [
                  {
                    "value": "{{ .serviceTag }}",
                    "evaluator": "IN"
                  }
                ]
              }
            ],
            "criteria": []
          },
          "limit": 20,
          "rate": "NONE",
          "enabled": true
        },
        {
          "id": "B",
          "metric": "builtin:service.response.server",
          "spaceAggregation": "AUTO",
          "timeAggregation": "DEFAULT",
          "splitBy": [],
          "sortBy": "DESC",
          "sortByDimension": "",
          "filterBy": {
            "filterOperator": "AND",
            "nestedFilters": [
              {
                "filter": "dt.entity.service",
                "filterType": "TAG",
                "filterOperator": "OR",
                "nestedFilters": [],
                "criteria": [
                  {
                    "value": "{{ .serviceTag }}",
                    "evaluator": "IN"
                  }
                ]
              }
            ],
            "criteria": []
          },
          "limit": 20,
          "rate": "NONE",
          "enabled": true
        }
      ],
      "visualConfig": {
        "type": "GRAPH_CHART",
        "global": {},
        "rules": [
          {
            "matcher": "A:",
            "unitTransform": "auto",
            "valueFormat": "auto",
            "properties": {
              "color": "BLUE",
              "seriesType": "COLUMN"
            },
            "seriesOverrides": []
          },
          {
            "matcher": "B:",
            "unitTransform": "auto",
            "valueFormat": "auto",
            "properties": {
              "color": "RED",
              "seriesType": "LINE"
            },
            "seriesOverrides": []
          }
        ],
        "axes": {
          "xAxis": {
            "displayName": "",
            "visible": true
          },
          "yAxes": [
            {
              "displayName": "",
              "visible": true,
              "min": "AUTO",
              "max": "AUTO",
              "position": "LEFT",
              "queryIds": [
                "A"
              ],
              "defaultAxis": true
            },
            {
              "displayName": "",
              "visible": true,
              "min": "AUTO",
              "max": "AUTO",
              "position": "RIGHT",
              "queryIds": [
                "B"
              ],
              "defaultAxis": true
            }
          ]
        },
        "heatmapSettings": {
          "yAxis": "VALUE"
        },
        "thresholds": [
          {
            "axisTarget": "LEFT",
            "rules": [
              {
                "color": "#7dc540"
              },
              {
                "color": "#f5d30f"
              },
              {
                "color": "#dc172a"
              }
            ],
            "visible": true
          }
        ],
        "tableSettings": {
          "hiddenColumns": []
        },
        "graphChartSettings": {
          "connectNulls": false
        },
        "honeycombSettings": {
          "showHive": true,
          "showLegend": true,
          "showLabels": false
        }
      },
      "queriesSettings": {
        "resolution": ""
      },
      "metricExpressions": [
        "resolution=null&(builtin:service.requestCount.server:filter(and(or(in(\"dt.entity.service\",entitySelector(\"type(service),tag(~\"{{ .serviceTag }}~\")\"))))):splitBy():sort(value(auto,descending)):limit(20)):limit(100):names,(builtin:service.response.server:filter(and(or(in(\"dt.entity.service\",entitySelector(\"type(service),tag(~\"{{ .serviceTag }}~\")\"))))):splitBy():sort(value(auto,descending)):limit(20)):limit(100):names"
      ]
    },

